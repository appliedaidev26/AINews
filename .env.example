# Firebase Auth (https://console.firebase.google.com → Project Settings)
FIREBASE_PROJECT_ID=your-firebase-project-id
# Path to downloaded service account JSON (Project Settings → Service Accounts → Generate new private key)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Database
DATABASE_URL=postgresql+asyncpg://ainews:ainews@localhost:5432/ainews
DATABASE_URL_SYNC=postgresql://ainews:ainews@localhost:5432/ainews

# Gemini AI (primary enrichment provider)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_PRO_MODEL=gemini-2.5-pro

# OpenAI (fallback enrichment provider when Gemini is unavailable)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Reddit API (https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ainews/1.0

# Ingestion settings
HN_MIN_SCORE=50
ARXIV_MAX_RESULTS=30
DEDUP_SIMILARITY_THRESHOLD=0.85

# API
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Environment
ENVIRONMENT=development
